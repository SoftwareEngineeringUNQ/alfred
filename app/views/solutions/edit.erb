  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:solutions, :new) %></li>
  <li class="active"> <%= link_to tag_icon(:edit, pat(:edit)), url(:solutions, :edit, :id => @solution.id) %></li>
</ul>
<div class="tabs-content">
  <% form_for :solution, url(:solutions, :update, :id => @solution.id), :method => :put, :class => 'form-horizontal' do |f| %>
