<% error = @assignment.errors.key?(:name) && @assignment.errors[:name].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :file, :class => 'control-label' %>
  <div class='controls'>
    <%= f.file_field :file, :class => 'input-large input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= f.error_message_on(:file) if error %></span>
  </div>
</fieldset>

<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:assignment, :file, :index, :assignment_id => @assignment.id), :class => 'btn' %>
</div>
