<h2><%= t('assignments.files.title') + " #{@assignment.name}" %></h2>

<%- if current_account.is_teacher? %>
	<ul class="nav nav-tabs">
	  <li class=active> <%= link_to tag_icon(:list, pat(:list)), url(:assignment, :file, :index, :assignment_id => @assignment.id) %></li>
	  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:assignment, :file, :new, :assignment_id => @assignment.id) %></li>
	</ul>
<% end %>
<div class=tabs-content>
	<table id=list class="table table-striped table-hover table-condensed">
	  <thead>
	    <tr>
	      <th class=header> <%= t('assignments.files.name') %></th>
	      <th><%= t('actions').capitalize %></th>
	      <th class="header list-row-action-header"></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @files.each do |file| %>
	      <tr class=list-row>
	      	<td class=list-column> <%= file.name %> </td>
	        <td class=list-column>
	        	<%- link_to :href => file_download_link(file.path), :title => t('assignments.files.download_link'), :rel => :tooltip, :class => 'list-row-action-wrapper-link' do %>
		        	<i class='icon-download'></i>
		      	<% end %>
		        <%- if current_account.is_teacher? %>
			        <%- form_tag url(:assignment, :file, :destroy, :assignment_id => @assignment.id, :id => file.id), :method => :delete, :class => 'delete-form', :data => { :confirmation => t('assignments.files.delete.confirm') }, :style => 'display:inline' do %>
			        	<button type='submit' title="<%= t('assignments.files.delete.title') %>" rel='tooltip' class="btn btn-mini btn-danger">
			        		<i class='icon-white icon-trash'></i>
			        	</button>
			        <% end %>
			      <% end %>
        	</td>
	        <td class="list-column list-row-action">
	          <div class='list-row-action-wrapper'>
	        	</div>
	        </td>
	      </tr>
	   	<% end %>
	 	</tbody>
	</table>
	<%- if current_account.is_teacher? %>
		<div class="form-actions">
			<%= link_to t(:back).capitalize, url(:assignments, :index, :course_id => current_course.id), :class => 'btn btn-primary' %>
		</div>
	<% end %>
</div>

<% content_for :additional_js do %>
  <%= javascript_include_tag 'assignment_files_index.js' %>
<% end %>