<ul class="nav nav-tabs">
  <li class=active> <%= link_to tag_icon(:list, pat(:list)), url(:assignment, :generic, :file, :index, :assignment_id => @assignment.id) %></li>
  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:assignment, :generic, :file, :new, :assignment_id => @assignment.id) %></li>
</ul>
<div class=tabs-content>
	<table id=list class="table table-striped table-hover table-condensed">
	  <thead>
	    <tr>
	      <th class=header> <%= t('assignments.files.name') %></th>
	      <th class=header></th>
	      <th class="header list-row-action-header"></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @files.each do |file| %>
	      <tr class=list-row>
	      	<td class=list-column> <%= file.name %> </td>
	        <td class=list-column> 
		        <a href="<%=file_download_link(file.path)%>" title="<%= t('assignments.files.download_link')%>">
		        	<i class='icon-download'></i>
		        </a>
		        <%- form_tag url(:assignment, :generic, :file, :destroy, :assignment_id => @assignment.id, :id => file.id), :method => :delete, :class => 'delete-form', :data => { :confirmation => t('assignments.files.delete.confirm') }, :style => 'display:inline' do %>
		        	<button type='submit' title="<%= t('assignments.files.delete.title') %>" rel='tooltip' class="btn btn-danger">
		        		<i class='icon-white icon-trash'></i>
		        	</button>
		        <% end %>
        	</td>
	        <td class="list-column list-row-action">
	          <div class='list-row-action-wrapper'>
	        	</div>
	        </td>
	      </tr>
	   	<% end %>
	 	</tbody>
	</table>
</div>

<% content_for :additional_js do %>
  <%= javascript_include_tag 'assignment_files_index.js' %>
<% end %>